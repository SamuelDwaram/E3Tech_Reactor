                    <Viewbox>
                        <Label Content="Please Enter Valid Password" Style="{StaticResource ErrorLabelStyle}"/>
                    </Viewbox>
                </Grid>
                <!--#endregion-->

                <!--#region Login Button -->
                <Grid Grid.Row="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Content="Login" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PasswordTextBox}" Style="{StaticResource LoginButtonStyle}"/>
                </Grid>
