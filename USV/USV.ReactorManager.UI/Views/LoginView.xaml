                                </DataTrigger>
                                <DataTrigger Binding="{Binding UserNameError}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=UsernameTextBox,Path=IsKeyboardFocused}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=PasswordTextBox,Path=IsKeyboardFocused}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Viewbox>
                        <Label Content="Please Enter Valid UserName" Style="{StaticResource ErrorLabelStyle}"/>
                    </Viewbox>
                </Grid>
