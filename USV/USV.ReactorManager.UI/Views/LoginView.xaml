                                        <Setter Property="BorderThickness" Value="10"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <BlurEffect Radius="15"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=UsernameTextBox,Path=IsKeyboardFocused}" Value="True">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <BlurEffect Radius="0"/>
                                            </Setter.Value>
                                        </Setter>
