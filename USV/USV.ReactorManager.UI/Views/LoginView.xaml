                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Grid.ColumnSpan="2">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding UserNameError}" Value="True"/>
                                            <Condition Binding="{Binding ElementName=UsernameTextBox,Path=IsKeyboardFocused}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="BorderBrush" Value="Red"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <BlurEffect Radius="0"/>
                                                </Setter.Value>
                                            </Setter>
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=UsernameTextBox,Path=IsKeyboardFocused}" Value="True">
                                        <Setter Property="BorderBrush" Value="#4cdcdc"/>
                                        <Setter Property="BorderThickness" Value="10"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <BlurEffect Radius="15"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=PasswordTextBox,Path=IsKeyboardFocused}" Value="True">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
