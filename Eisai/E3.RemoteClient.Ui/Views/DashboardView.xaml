                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Viewbox HorizontalAlignment="Left">
                        <Button Margin="20,0,0,0" Content="RCVD" Command="{Binding NavigateCommand}" Foreground="White" Style="{StaticResource NavigateToOtherScreenButtonStyle}">
