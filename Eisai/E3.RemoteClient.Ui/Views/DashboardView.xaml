                    </Viewbox>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2" Background="#272e3e" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Viewbox HorizontalAlignment="Left">
                        <Button Margin="20,0,0,0" Content="JET MILL" Command="{Binding NavigateCommand}" Foreground="White" Style="{StaticResource NavigateToOtherScreenButtonStyle}">
                            <Button.CommandParameter>OtherEquipment</Button.CommandParameter>
                        </Button>
                    </Viewbox>
                </Grid>
                <Grid Grid.Row="1">
                    <Viewbox HorizontalAlignment="Left">
                        <userControls:StatusIndicatorAnimation Margin="30,10,10,10" CurrentStatus="{Binding UsedNow, Converter={StaticResource DeviceStatusExtractorCon},ConverterParameter=OtherEquipment|JetmillStatus}"/>
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="3" Background="#272e3e" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Viewbox HorizontalAlignment="Left">
                        <Button Margin="20,0,0,0" Content="6TR Chiller" Command="{Binding NavigateCommand}" Foreground="White" Style="{StaticResource NavigateToOtherScreenButtonStyle}">
                            <Button.CommandParameter>6TR_Chiller</Button.CommandParameter>
                        </Button>
                    </Viewbox>
                </Grid>
                <Grid Grid.Row="1">
                    <Viewbox HorizontalAlignment="Left">
                        <userControls:StatusIndicatorAnimation Margin="30,10,10,10" CurrentStatus="{Binding UsedNow, Converter={StaticResource DeviceStatusExtractorCon},ConverterParameter=6TR_Chiller}"/>
                    </Viewbox>
                </Grid>
            </Grid>
            <!--#endregion-->

            <!--#region Row 4-->
            <Grid Grid.Row="3" Grid.Column="0" Background="#272e3e" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Viewbox HorizontalAlignment="Left">
                        <Button Margin="20,0,0,0" Content="10TR Chiller" Command="{Binding NavigateCommand}" Foreground="White" Style="{StaticResource NavigateToOtherScreenButtonStyle}">
                            <Button.CommandParameter>10TR_Chiller</Button.CommandParameter>
