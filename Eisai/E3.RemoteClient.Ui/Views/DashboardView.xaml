                    </Viewbox>
                </Grid>
            </Grid>
            <!--#endregion-->

            <!--#region Row 3-->
            <Grid Grid.Row="2" Grid.Column="0" Background="#272e3e" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Viewbox HorizontalAlignment="Left">
                        <Button Margin="20,0,0,0" Content="ANFD" Command="{Binding NavigateCommand}" Foreground="White" Style="{StaticResource NavigateToOtherScreenButtonStyle}">
                            <Button.CommandParameter>OtherEquipment</Button.CommandParameter>
                        </Button>
                    </Viewbox>
                </Grid>
                <Grid Grid.Row="1">
